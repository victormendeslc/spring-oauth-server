<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">

    <property name="now" value="now()" dbms="h2"/>

    <property name="now" value="current_timestamp" dbms="postgresql"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql"/>

    <!--
        Added the entity Usuario.
    -->
    <changeSet id="20200106015907-1" author="victor.cunha">
        <createTable tableName="usuario">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="uuid" type="varchar(36)">
                <constraints nullable="false"/>
            </column>

            <column name="data_hora_cadastro" type="datetime">
                <constraints nullable="false"/>
            </column>

            <column name="uuid_usuario_cadastro" type="varchar(36)">
                <constraints nullable="false"/>
            </column>

            <column name="data_hora_alteracao" type="datetime">
                <constraints nullable="true"/>
            </column>

            <column name="uuid_usuario_alteracao" type="varchar(36)">
                <constraints nullable="true"/>
            </column>

            <column name="excluido" type="boolean">
                <constraints nullable="false"/>
            </column>

            <column name="login" type="varchar(255)">
                <constraints nullable="false"/>
            </column>

            <column name="senha" type="varchar(255)">
                <constraints nullable="false"/>
            </column>

            <column name="activation_key" type="varchar(36)">
                <constraints nullable="false"/>
            </column>

            <column name="data_hora_activation_key" type="datetime">
                <constraints nullable="true"/>
            </column>

            <column name="reset_key" type="varchar(36)">
                <constraints nullable="true"/>
            </column>

            <column name="data_hora_reset_key" type="datetime">
                <constraints nullable="true"/>
            </column>

        </createTable>
        <dropDefaultValue tableName="usuario" columnName="data_hora_reset_key" columnDataType="datetime"/>
        <dropDefaultValue tableName="usuario" columnName="data_hora_activation_key" columnDataType="datetime"/>
        <dropDefaultValue tableName="usuario" columnName="data_hora_cadastro" columnDataType="datetime"/>
        <dropDefaultValue tableName="usuario" columnName="data_hora_alteracao" columnDataType="datetime"/>
    </changeSet>

    <changeSet author="liquibase-docs" id="20200106015907-2">
        <insert tableName="usuario">
            <column name="id" value="1"/>
            <column name="uuid" value="8c5b56f2-c938-45f9-baaa-3c449058eadd"/>
            <column name="data_hora_cadastro" valueDate="${now}"/>
            <column name="uuid_usuario_cadastro" value="8c5b56f2-c938-45f9-baaa-3c449058eadd"/>
            <column name="data_hora_alteracao" valueDate="${now}"/>
            <column name="excluido" value="false"/>
            <column name="login" value="SISTEMA"/>
            <column name="senha" value="$2a$10$yUgt0pwJSyw0lVnHUg5OgOcOjkB0U40gEqKCcMUqmZ4jZ.PGTiJqG"/>
            <column name="activation_key" value="8c5b56f2-c938-45f9-baaa-3c449058eadd"/>
            <column name="data_hora_activation_key" valueDate="${now}"/>
        </insert>
    </changeSet>
</databaseChangeLog>
