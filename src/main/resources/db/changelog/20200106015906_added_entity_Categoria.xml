<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">

    <property name="now" value="now()" dbms="h2"/>

    <property name="now" value="current_timestamp" dbms="postgresql"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql"/>

    <!--
        Added the entity Categoria.
    -->
    <changeSet id="20200106015906-1" author="jhipster">
        <createTable tableName="categoria">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="uuid" type="varchar(36)">
                <constraints nullable="false"/>
            </column>

            <column name="data_hora_cadastro" type="datetime">
                <constraints nullable="false"/>
            </column>

            <column name="uuid_usuario_cadastro" type="datetime">
                <constraints nullable="false"/>
            </column>

            <column name="data_hora_alteracao" type="datetime">
                <constraints nullable="false"/>
            </column>

            <column name="uuid_usuario_alteracao" type="datetime">
                <constraints nullable="false"/>
            </column>

            <column name="nome" type="varchar(255)">
                <constraints nullable="false"/>
            </column>

            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>
        <dropDefaultValue tableName="categoria" columnName="data_hora_cadastro" columnDataType="datetime"/>
        <dropDefaultValue tableName="categoria" columnName="uuid_usuario_cadastro" columnDataType="datetime"/>
        <dropDefaultValue tableName="categoria" columnName="data_hora_alteracao" columnDataType="datetime"/>
        <dropDefaultValue tableName="categoria" columnName="uuid_usuario_alteracao" columnDataType="datetime"/>
    </changeSet>
    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here, do not remove-->
</databaseChangeLog>
