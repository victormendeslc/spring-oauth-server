<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">

    <property name="now" value="now()" dbms="h2"/>

    <property name="now" value="current_timestamp" dbms="postgresql"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql"/>

    <!--
        Added the entity ContaReceber.
    -->
    <changeSet id="20200106015905-1" author="jhipster">
        <createTable tableName="conta_receber">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="uuid" type="varchar(36)">
                <constraints nullable="false"/>
            </column>

            <column name="data_hora_cadastro" type="datetime">
                <constraints nullable="false"/>
            </column>

            <column name="uuid_usuario_cadastro" type="datetime">
                <constraints nullable="false"/>
            </column>

            <column name="data_hora_alteracao" type="datetime">
                <constraints nullable="false"/>
            </column>

            <column name="uuid_usuario_alteracao" type="datetime">
                <constraints nullable="false"/>
            </column>

            <column name="categoria_id" type="bigint">
                <constraints nullable="false"/>
            </column>

            <column name="valor" type="decimal(10,2)">
                <constraints nullable="false"/>
            </column>

        </createTable>
        <dropDefaultValue tableName="conta_receber" columnName="data_hora_cadastro" columnDataType="datetime"/>
        <dropDefaultValue tableName="conta_receber" columnName="uuid_usuario_cadastro" columnDataType="datetime"/>
        <dropDefaultValue tableName="conta_receber" columnName="data_hora_alteracao" columnDataType="datetime"/>
        <dropDefaultValue tableName="conta_receber" columnName="uuid_usuario_alteracao" columnDataType="datetime"/>
    </changeSet>
</databaseChangeLog>
